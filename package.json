{
  "name": "sfsf-projman",
  "version": "1.0.0",
  "description": "Project Management App(Ext SF by Ward)",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "@sap/cds-dk": "^6.0.3",
    "@sap/xsenv": "^3.3.2",
    "@sap/xssec": "^3.2.13",
    "express": "^4",
    "passport": "^0.6.0",
    "hdb": "^0.18.3"
  },
  "devDependencies": {
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "auth": {
        "[development]": {
          "strategy": "mock",
          "users": {
            "ward": {
              "roles": [
                "Admin"
              ]
            },
            "peng": {
              "roles": [
                "Developer"
              ]
            }
          }
        }
      },
      "ECEmployeeProfile": {
        "kind": "odata-v2",
        "model": "srv/external/ECEmployeeProfile",
        "credentials": {
          "destination": "SFSF",
          "path": "/odata/v2/Background_SpecialAssign"
        }
      },
      "PLTUserManagement": {
        "kind": "odata-v2",
        "model": "srv/external/PLTUserManagement",
        "credentials": {
          "destination": "SFSF",
          "path": "/odata/v2/User"
        }
      },
      "db": {
        "kind": "hana"
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  }
}
